{
  "*" : {
    "margin": 0,
    "padding": 0
  },
  "body":{
    "font-size" : "2em"
  },
  "body>section":{
    "width": "200px",
    "height": "400px",
    "margin" : "20px 10px"
  },
  "header ul" : {
    "display": "flex",
    "list-style-type": "none",
    "justify-content": "center"
  },
  "header ul li" : {
    "margin": "10px"
  },
  "main>div" : {
    "display": "flex",
    "width": "80vw"
  },
  "main>div>img" : {
    "width": "200px",
    "height": "400px",
    "margin" : "20px 10px"
  },
  "main>div>div>div" : {
    "margin": "20px 5px",
    "color" : "#555"
  },
  "main>div>div>p" : {
    "margin": "20px 5px",
    "font-size": "14px",
    "color" : "#555"
  },
  "hr" : {
    "margin-bottom": "100px"
  },
  "nav" : {
    "position": "absolute",
    "right": "30px",
    "top": "100px",
    "font-size": "1.2em",
    "cursor" : "pointer"
  }
}
